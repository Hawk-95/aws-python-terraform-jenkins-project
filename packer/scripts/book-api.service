[Unit]
Description=Book API FastAPI Service
After=network.target

[Service]
User=ec2-user
WorkingDirectory=/opt/book-app

ExecStart=/usr/bin/python3 -m gunicorn \
  -w 2 \
  -k uvicorn.workers.UvicornWorker \
  -b 0.0.0.0:8000 \
  main:app

Restart=always
RestartSec=3
Environment=AWS_REGION=ap-south-1

[Install]
WantedBy=multi-user.target

